@model MvcStok.Models.Entity.TblKategoriler
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.KategoriId)
        @Html.TextAreaFor(m => m.KategoriId, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.KategoriAd)
        @Html.TextAreaFor(m => m.KategoriAd, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Kategori Güncelle</button>
    </div>
}

