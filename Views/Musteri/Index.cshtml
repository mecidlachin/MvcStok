@using MvcStok.Models.Entity;
@model List<TblMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b> Aranacak Müşteri Adı : </b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri Id</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Alert</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var mus in Model)
            {
                <tr>
                    <td>@mus.MusteriId</td>
                    <td>@mus.MusteriAd</td>
                    <td>@mus.MusteriSoyad</td>
                    <td><a href="/Musteri/Sil/@mus.MusteriId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Musteri/MusteriGetir/@mus.MusteriId" class="btn btn-success">Güncelle</a></td>
                    <td>@Html.ActionLink("Sil Butonu", "Sil", new { id = mus.MusteriId }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Veri bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>
